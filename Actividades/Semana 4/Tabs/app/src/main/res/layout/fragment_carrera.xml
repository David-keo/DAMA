<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI CARRERA"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Nombre de la carrera -->
        <TextView
            android:id="@+id/tvCarrera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="10dp"/>

        <!-- Ciclos cursados -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryColor"
            android:layout_marginBottom="6dp"
            android:text="Ciclos cursados"/>

        <TextView
            android:id="@+id/tvCiclos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="12dp"/>

        <!-- Materias cursadas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryColor"
            android:layout_marginBottom="6dp"
            android:text="Materias que cursé:"/>

        <TextView
            android:id="@+id/tvMaterias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="20dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMiUniversidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Universidad"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textColor="@color/primaryColor"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"/>
    </LinearLayout>

</LinearLayout>
