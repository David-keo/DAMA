<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Calculadora de Notas"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Campo para el nombre del estudiante -->
    <EditText
        android:id="@+id/et_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del estudiante"
        android:inputType="textPersonName"
        android:layout_marginTop="16dp" />

    <!-- Campo para la nota mínima -->
    <EditText
        android:id="@+id/et_min_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota mínima para aprobar"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <!-- Subtítulo para la selección de cómputo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Seleccione el cómputo:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!-- Grupo de opciones para seleccionar el cómputo -->
    <RadioGroup
        android:id="@+id/rg_computo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rb_computo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cómputo 1" />

        <RadioButton
            android:id="@+id/rb_computo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cómputo 2" />

        <RadioButton
            android:id="@+id/rb_computo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cómputo 3" />
    </RadioGroup>

    <!-- Subtítulo para la entrada de notas -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Ingrese las notas:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic" />

    <!-- Campos para las notas -->
    <EditText
        android:id="@+id/nota1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 1"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/nota2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 2"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/nota3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota 3"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp" />

    <!-- Botón para calcular -->
    <Button
        android:id="@+id/calcularButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/primary"
        android:textColor="@color/white" />

    <!-- Mensaje de error o resultados -->
    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/red" />

</LinearLayout>
